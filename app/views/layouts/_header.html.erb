<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<%= link_to "Sayf", root_path, id: "logo" %>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to "Home",   root_path %></li>
				<li><%= link_to "Help",   help_path %></li>
				<% if user_signed_in? %>
				<li><%= link_to "Users", users_path %></li>
				<li class='dropdown'>
					<a href=<%= user_path(id: current_user.id) %> class='dropdown-toggle' data-toggle='dropdown' role='button'
						aria-expanded='false'>
						Account <span class='caret'></span>
					</a>
					<ul class='dropdown-menu' role='menu'>
						<li><%= link_to "My page", user_path(id: current_user.id) %></li>
						<li><%= link_to "Edit profile", profile_edit_path %></li>
						<li><%= link_to "Change registration info", edit_user_registration_path %></li>
						<li class="divider"></li>
						<li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
					</ul>
				</li>
				<% else %>
				<li><%= link_to "Log in", new_user_session_path %></li>
				<li><%= link_to "Sign up", new_user_registration_path %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>