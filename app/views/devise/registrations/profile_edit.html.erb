<div class="profile_edit">
  <h2>Edit Profile</h2>
  <%= form_for(current_user, url: {action: 'profile_update'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: current_user %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :icon %><br />
      <img id="img_prev" src="#" class='hidden' />
      <% if current_user.persisted? && current_user.icon? %>
        <%= image_tag current_user.icon_url, class: 'present_img icon_image' %><br />
        <%= f.check_box :remove_icon %>
        <%= f.label :remove_icon, "remove icon image" %>
      <% else %>
        <%= image_tag 'user.png', class: 'present_img icon_image' %>
        <%= f.hidden_field :icon_cache %>
      <% end %>
      <%= f.file_field :icon, class: "form-control-file", id: 'post_img' %>
    </div>
    <div class="field">
      <%= f.label :profile %> <i>(200 characters maximum)</i><br />
      <%= f.text_area :profile, autofocus: true, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-primary withripple' %>
    </div>
  <% end %>
</div>
