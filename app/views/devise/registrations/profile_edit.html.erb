<h2>Edit Profile</h2>

<%= form_for(current_user, url: {action: 'profile_update'}) do |f| %>
<%= render "devise/shared/error_messages", resource: current_user %>

<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
</div>

<div class="field">
	<%= f.label :icon %><br />
	<%= image_tag current_user.icon.url if current_user.icon? %>
	<%= f.file_field :icon, class: "form-control-file" %>
	<%= f.hidden_field :icon_cache %>
	<%= f.check_box :remove_icon %>
	<%= f.label :remove_icon, "remove icon image" %>
</div>

<div class="field">
	<%= f.label :profile %> <i>(200 characters maximum)</i><br />
	<%= f.text_area :profile, autofocus: true, class: 'form-control' %>
</div>

<div class="actions">
	<%= f.submit "Update", class: 'btn btn-primary withripple' %>
</div>

<% end %>