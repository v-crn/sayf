<% provide(:title, "Favorites") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="user_page">
      <%= link_to "User page", user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Favorite Sayings (<%= @feed_items.count %>)</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
