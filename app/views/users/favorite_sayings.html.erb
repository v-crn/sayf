<% provide(:title, "Favorites") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="user_page">
      <%= link_to "User page", user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Favorite Sayings (<%= @favorite_sayings.count %>)</h3>
    <ol class="sayings">
      <%= render @favorite_sayings %>
    </ol>
    <div class="d-flex justify-content-left mb-2">
      <%== pagy_bootstrap_nav(@pagy_favs) if @pagy_fav.pages > 1 %>
    </div>
  </div>
</div>
