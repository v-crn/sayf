<% provide(:title, @title) %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'users/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="fav">
        <%= link_to 'Favorite Sayings', favorite_sayings_user_path(@user) %>
      </section>
      <section class="follow_icons">
        <%= render 'shared/stats_following' %>
        <%= render 'users/user_icons' if @title == "Following" %>
        <%= render 'shared/stats_followers' %>
        <%= render 'users/user_icons' if @title == "Followers" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      <% end %>
    </div>
  </div>
<% end %>
