<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="fav">
      <%= link_to 'Favorite Sayings', favorite_sayings_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @feed_items.any? %>
      <h3>Sayings (<%= @feed_items.count %>)</h3>
      <%= render 'shared/feed' %>
    <% end %>
  </div>
</div>
